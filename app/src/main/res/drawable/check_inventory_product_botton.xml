<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- layout background -->
    <item>
        <!-- show rectangle area -->
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="#1f7ef2"
                android:centerX="50%"
                android:centerY="0"
                android:endColor="#1f7ef2"
                android:startColor="#1f7ef2" />

            <corners
                android:bottomLeftRadius="21.5dp"
                android:bottomRightRadius="21.5dp"
                android:topLeftRadius="21.5dp"
                android:topRightRadius="21.5dp" />
        </shape>
    </item>
</layer-list>